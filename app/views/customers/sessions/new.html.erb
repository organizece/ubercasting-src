<div id="customer-login-container">
	
	<div id="agency-logo"></div>
	
	<div id="customer-login-window">
		
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<%= hidden_field_tag :subdomain, params[:subdomain] %>

		<div class="form-inputs">
			<%= f.input :email, :required => false, :autofocus => true %>
			<%= f.input :password, :required => false %>
			<%= f.input :remember_me, :label => "Lembrar de mim", :as => :boolean if devise_mapping.rememberable? %>
		</div>

		<div class="form-actions">
			<%= f.button :submit, "Login", :class => "input-btn-silver-light-4-column" %>
		</div>

		<% end %>

		<%= render "customers/shared/links" %>
		
	</div>
	
	<div id="uber-logo">
		<%= image_tag "customer/img-uber-logo.png" %>
	</div>
	
</div>