<div id="modal-add-model" class="modal hide fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3>Criar novo casting</h3>
  </div>
  <%= form_tag castings_save_add_models_path, method: :post, remote: true do %>
    <%= hidden_field_tag :models, params[:models] %>
    <%= hidden_field_tag :type, :create_and_add %>
    <div class="modal-body">
      <div class="span7">
        <%= text_field_tag :casting_name, nil, class: 'input-xxlarge' %>
      </div>
      <div class="span2">
        <%= submit_tag 'Criar Novo Casting e Adicionar Modelo(s)', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>

  <div class="modal-header">
    <h3>Adicionar Modelo à Casting</h3>
  </div>
  <%= form_tag castings_save_add_models_path, method: :post, remote: true do %>
    <%= hidden_field_tag :models, params[:models] %>
    <%= hidden_field_tag :type, :add_only %>
    <div class="modal-body">
      <table class="table table-striped">
        <% for casting in @castings %>
          <tr>
            <td><%= radio_button_tag :casting_id, casting.id %></td>
            <td><%= casting.name %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="modal-footer">
      <%= submit_tag 'Adicionar', class: 'btn btn-primary' %>
      <button class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>
    </div>
  <% end %>
</div>