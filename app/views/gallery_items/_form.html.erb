<%= simple_form_for(@gallery_item) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
        <%= f.input :title %>
        <%= f.input :description %>
        <% if @gallery_item.image? %>
            <div id='image-update'>
                <%= image_tag @gallery_item.image.url(:gallery) %>
                <a href="#" id="image-update" class="btn-silver-light-fluid">Alterar</a>
            </div>
            <div id='image-field' style='display:none;'>
                <%= f.label :image, "Upload de image" %>
                <%= f.file_field :image %>
                <br/>ou<br/>
                <a href="#" id="image-update-cancel" class="btn-silver-light-fluid">Cancelar</a>
            </div>
        <% else %>
            <%= f.label :image %>
            <%= f.file_field :image %>
        <% end %>
    </div>

    <div class="form-actions">
        <%= f.button :submit %>
    </div>

<% end %>