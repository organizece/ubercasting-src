<div id="search-gallery-result" class="auto-size-block">
    
    <% for item in @gallery_items %>
    
        <div id="model-box-<%= item.id %>" class="model-box">
            <div class="model-box-img">
                <% if item.image? %>
                    <%= image_tag item.image.url(:thumb) %>
                <% end %>
            </div>
            
            <div class="model-box-links">
                <ul id="search-gallery-list">
                    <li class="gallery-action gallery-view"><a href="<%= item.image.url(:thumb) %>" rel="lightbox[roadtrip]" title="<%= item.title %>">Image Thumb</a></li>
                    <li class="gallery-action gallery-edit"><%= link_to 'Editar', edit_gallery_item_path(item) %></li>
                    <li class="gallery-action gallery-del"><%= link_to 'Deletar', gallery_item_path(item), method: :delete, remote: true, :confirm => "Tem certeza que deseja excluir este item da galeria?" %></li>
                </ul>
            </div>
        </div>
    
    <% end %>

</div>