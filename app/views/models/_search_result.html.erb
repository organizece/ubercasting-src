<%= javascript_include_tag "modelblock" %>

<div id="search-paginator" class="auto-size-block paginator">
	
	<ul>
		<li class="put-left itens_per_page">
			Itens por página:&nbsp;&nbsp;
		    <%= select_tag :itens_per_page, options_for_select(itens_per_page, params[:itens_per_page]), class: 'input-mini' %>
		</li>
		<li class="pagination">
			<%= paginate @models %>
		</li>
		<li class="put-right order_column">
			Ordenar por:&nbsp;&nbsp;
		    <%= select_tag :order_column, options_for_select(model_order_columns, params[:order_column]), :include_blank => true, class: 'input-medium' %>
		</li>
	</ul>
	
</div>

<div id="search-casting-actions" class="auto-size-block actions-tab">
	
	<ul>
		<li>
			<span>Casting:</span>
			<%= link_to "Adicionar Selecionados", models_path %>
		</li>
		<li>
			<%= link_to "Adicionar Todos", models_path %>
		</li>
		<li>
			<%= link_to "Visualizar Castings", castings_path %>
		</li>
	</ul>
	
</div>

<div id="search-models-result" class="auto-size-block">
	
	<% for model in @models %>
	
		<div class="model-box">
			
			<div class="model-box-img">
				
				<div class="model-box-checkbox">
					<%= check_box_tag model.id, model.id %>
				</div>
				
				<% if model.avatar %>
			        <%= image_tag model.avatar.image.url(:thumb), class: 'rounded' %>
			      <% else %>
			        <%= image_tag 'avatar.png', class: 'rounded' %>
			      <% end %>
			
			</div>
			
			<div class="model-box-links">
				
				<ul>
					<% if model.composite %>
					<li class="model-box-view-composite"><%= link_to 'Visualizar Composite', model_composite_path(model, model.composite) %></li>
					<!--<li><%= link_to 'Editar Composite', edit_model_composite_path(model, model.composite) %></li>-->
					<% else %>  
					<li><%= link_to 'Criar Composite', new_model_composite_path(model) %></li>
					<% end %>
					<li><h4><%= link_to model.name, model_path(model) %></h4></li>
					<li class="model-box-add-composite"><a href="javascript:return false;">Adicionar a Casting</a></li>
					<li class="model-box-more-links admin-inner-container"><a href="#" onclick="javascript:return false;" class="model-box-open-link">Mais Ações</a></li>
					<li class="model-box-more-links admin-inner-container closed"><%= link_to 'Editar Modelo', edit_model_path(model) %></li>
					<li class="model-box-more-links admin-inner-container closed"><%= link_to 'Upload Fotos', new_model_photo_path(model, {source: 'edit'}) %></li>
					<li class="model-box-more-links admin-inner-container closed"><%= link_to 'Deletar Modelo', model_path(model), method: :delete %></li>
				</ul>
				
			</div>
			
		</div>
	
	<% end %>
	
</div>