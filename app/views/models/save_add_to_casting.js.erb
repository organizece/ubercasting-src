$("#modal-add-model").modal('hide');
$("#modals").empty();
$("#alert-msgs").empty();
<% if @model_casting.errors.any? %>
  $('#alert-msgs').prepend("<%= escape_javascript(render('utils/error_messages', errors: @model_casting.errors)) %>");
<% else %>
  $('#alert-msgs').prepend("<%= escape_javascript(render('utils/success_messages')) %>");
  <% flash.discard() %> //Need to discard flash messages due problem with them persisting to the next request
<% end %>