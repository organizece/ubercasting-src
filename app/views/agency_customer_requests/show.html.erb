<div id="customer-request-container" class="full-column-container put-center">
	
	<div id="main-header" class="auto-size-block admin-panel-header">
		
		<span class="icon-title icon-title-model put-left">&nbsp;</span>
		<h2 class="put-left clear-margin-padding font-title">Gerenciar <strong>Clientes</strong></h2>
		
	</div>
	
	<div class="content-split"></div>
	
	<div id="customer-request-content" class="auto-size-block clear-margin put-relative">
		
		<div class="admin-panel-full-top clear-margin-padding">&nbsp;</div>
		
		<div id="content" class="full-column-width content-body">
			
			<div id="subheader" class="auto-size-block admin-inner-container">
				<h3 class="put-left header-base-title-text">Pedido de Cadastro de Novo Cliente</h3>
			</div>
			
			<div class="content-split"></div>
			
			<div id="body" class="auto-size-block clear-margin">
				
				<div id="request-header"class="auto-size-block admin-inner-container">
					
					<ul class="plain-list">
						<li>
							<span class="list-label">De:</span>
							<span class="from-address"><%= @request.name %> - <%= @request.email %></span>
						</li>
						<li>
							<span class="list-label">Quando:</span>
							<span><%= @request.created_at %></span>
						</li>
					</ul>
					
				</div>
				
				<div id="request-message">
					<ul class="plain-list">
					  <li>
					    <span class="list-label"><%= AgencyCustomerRequest.human_attribute_name(:name) %>:</span>
					    <%= @request.name %>
					  </li>
					  <li>
					    <span class="list-label"><%= AgencyCustomerRequest.human_attribute_name(:email) %>:</span>
					    <%= @request.email %>
					  </li>
					  <li>
					    <span class="list-label"><%= AgencyCustomerRequest.human_attribute_name(:phone) %>:</span>
					    <%= @request.phone %>
					  </li>
					  <li>
					    <span class="list-label"><%= AgencyCustomerRequest.human_attribute_name(:company) %>:</span>
					    <%= @request.company %>
					  </li>
					  <li>
					    <span class="list-label"><%= AgencyCustomerRequest.human_attribute_name(:message) %>:</span>
					    <%= @request.message %>
					  </li>
					</ul>
				</div>

				<div class="auto-size-block bottom-ctrl-bar">
					<%= link_to "Voltar", agency_customer_requests_path, :class => "put-left anchor-btn-silver-light-4-column" %>
					<%= link_to "Novo Cliente", agency_customers_new_from_request_path({request_id: @request.id}), :class => "put-right anchor-btn-gold-light-4-column" %>
				</div>
				
			</div>
			
		</div>
		
	</div>
	
</div>