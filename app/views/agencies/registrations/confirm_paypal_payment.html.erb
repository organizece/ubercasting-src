<%= stylesheet_link_tag    "internal" %>

<div id="main-content-container">
	
	<div id="content-wrapper">
		<div id="header">
			<h2 id="send-data">Enviando dados...</h2>
		</div>
		
		<div id="body">
			<%= simple_form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
				<%= image_tag "internal/ajax-loader-internal.gif" %>
			<% end %>
		</div>
	</div>
	
</div>

<script type="text/javascript" charset="utf-8">
	$(document).ready(function(){
		var timer = setInterval(function(){addPointLoad();},1000);
		function addPointLoad(){
			var oldTxt = $("h2#send-data").text();
			if ( oldTxt.length < 70 ) {
				oldTxt += ".";
				$("h2#send-data").text(oldTxt);
			};
		}
		$("#new_agency").submit();
	});
</script>