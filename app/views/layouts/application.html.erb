<!DOCTYPE html>
<html>
<head>
  <title>Ubercasting</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", media: "all" %>
  <% if controller.controller_name == 'composites' %>
    <%= javascript_include_tag "http://code.jquery.com/jquery-1.8.2.js" %>
    <%= javascript_include_tag "http://code.jquery.com/ui/1.9.0/jquery-ui.js" %>
    <%= javascript_include_tag "dragdrop_composite" %>
  <% else %>
    <%= javascript_include_tag "application" %>
  <% end %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="#">Ubercasting</a>
      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to 'Home', agency_root_path %></li>
          <li><%= link_to 'Modelos', models_path %></li>
        </ul>
        <ul class="nav pull-right">
          <li class="divider-vertical"></li>
          <li><%= link_to 'Sair', destroy_agency_session_path %></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <% flash.each do |name, msg| %>
    <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
      <a class="close" data-dismiss="alert">Ã—</a>
      <%= msg %>
    </div>
  <% end %>
  <div class="row">
    <div class="span12"> 
      <%= yield %>
    </div>
  </div>
</div>


</body>
</html>
