<!DOCTYPE html>
<html>
<head>
  <title>ÜBER - Casting Made Easy - <%= @website.subdomain %></title>

  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->

	<%= javascript_include_tag "subdomain" %>  
	<%= stylesheet_link_tag    "stylish", media: "all" %>
	<%= csrf_meta_tags %>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
	
	<% if @website.has_custom %>
		<style type="text/css" media="screen">
			body{
				<% if @website.body_background_color %> background-color: <%= @website.body_background_color %> !important; <% end %>
				<% if @website.body_font_family %> font-family: <%= @website.body_font_family %> !important; <% end %>
				<% if @website.body_font_size %> font-size: <%= @website.body_font_size %>% !important; <% end %>
				<% if @website.body_font_color %> color: <%= @website.body_font_color %> !important; <% end %>
			}
			
			h6,h5,h4,h3,h2,h1,a,p,label,span,input{
				<% if @website.body_font_color %> color: <%= @website.body_font_color %> !important; <% end %>
			}
			
			div#header{
				<% if @website.header_background_color %> background-color: <%= @website.header_background_color %> !important; <% end %>
				<% if @website.header_font_family %> font-family: <%= @website.header_font_family %> !important; <% end %>
				<% if @website.header_font_size %> font-size: <%= @website.header_font_size %>% !important; <% end %>
				<% if @website.header_font_color %> color: <%= @website.header_font_color %> !important; <% end %>
			}
			
			div#header h6, div#header h5, 
			div#header h4, div#header h3, 
			div#header h2, div#header h1, 
			div#header a, div#header p, 
			div#header label, div#header span, div#header input{
				<% if @website.header_font_color %> color: <%= @website.header_font_color %> !important; <% end %>
			}
			
			div#nav-container{
				<% if @website.navigation_background_color %> background-color: <%= @website.navigation_background_color %> !important; <% end %>
				<% if @website.navigation_font_family %> font-family: <%= @website.navigation_font_family %> !important; <% end %>
				<% if @website.navigation_font_size %> font-size: <%= @website.navigation_font_size %>% !important; <% end %>
				<% if @website.navigation_font_color %> color: <%= @website.navigation_font_color %> !important; <% end %>
			}
			
			div#nav-container h6, div#nav-container h5, 
			div#nav-container h4, div#nav-container h3, 
			div#nav-container h2, div#nav-container h1, 
			div#nav-container a, div#nav-container p, 
			div#nav-container label, div#nav-container span, div#nav-container input{
				<% if @website.navigation_font_size %> font-size: <%= @website.navigation_font_size %>% !important; <% end %>
				<% if @website.navigation_font_color %> color: <%= @website.navigation_font_color %> !important; <% end %>
			}
			
			div#content-container{
				<% if @website.content_background_color %> background-color: <%= @website.content_background_color %> !important; <% end %>
				<% if @website.content_font_family %> font-family: <%= @website.content_font_family %> !important; <% end %>
				<% if @website.content_font_size %> font-size: <%= @website.content_font_size %>% !important; <% end %>
				<% if @website.content_font_color %> color: <%= @website.content_font_color %> !important; <% end %>
			}
			
			div#content-container h6, div#content-container h5, 
			div#content-container h4, div#content-container h3, 
			div#content-container h2, div#content-container h1, 
			div#content-container a, div#content-container p, 
			div#content-container label, div#content-container span, div#content-container input{
				<% if @website.content_font_color %> color: <%= @website.content_font_color %> !important; <% end %>
			}
			
			div#footer{
				<% if @website.footer_background_color %> background-color: <%= @website.footer_background_color %> !important; <% end %>
				<% if @website.footer_font_family %> font-family: <%= @website.footer_font_family %> !important; <% end %>
				<% if @website.footer_font_size %> font-size: <%= @website.footer_font_size %>% !important; <% end %>
				<% if @website.footer_font_color %> color: <%= @website.footer_font_color %> !important; <% end %>
			}
			
			div#footer h6, div#footer h5, 
			div#footer h4, div#footer h3, 
			div#footer h2, div#footer h1, 
			div#footer a, div#footer p, 
			div#footer label, div#footer span, div#footer input{
				<% if @website.footer_font_size %> font-size: <%= @website.footer_font_size %>% !important; <% end %>
				<% if @website.footer_font_color %> color: <%= @website.footer_font_color %> !important; <% end %>
			}
		</style>
	<% end %>

</head>

<body>

<div id="modals"></div>
  
	<div id="container">
			
		<!-- ********** HEADER ********** -->
		
		<div id="header" class="auto-size-block">
			<div id="header-wrapper" class="auto-size-block">
				
				<div id="nav-container" class="auto-size-block">
					
					<div id="main-nav" class="auto-size-block">
						<ul class="auto-size-block put-list-inline">
							<li class="link-home"><%= link_to 'Home', subdomain_websites_home_path(subdomain: request.subdomain), :class => "active" %></li>

							<% if @website.about %>
							<li class="link-about"><%= link_to 'Sobre', subdomain_websites_about_path(subdomain: request.subdomain) %></li>
							<% end %>

							<% if @website.models %>
							<li class="link-models"><%= link_to 'Modelos', subdomain_models_path(subdomain: request.subdomain) %></li>
							<% end %>

							<% if @website.castings %>
								<% if customer_signed_in? %>
									<li class="link-casting"><%= link_to 'Casting', subdomain_castings_path(subdomain: request.subdomain) %></li>
								<% else %>
									<li class="link-casting"><%= link_to 'Casting', subdomain_websites_casting_foreign_path(subdomain: request.subdomain) %></li>
								<% end %>
							<% end %>

							<% if @website.contact_us %>
							<li class="link-contact"><%= link_to 'Contato', subdomain_websites_contact_us_path(subdomain: request.subdomain) %></li>
							<% end %>

							<% if @website.my_site %>
							<li class="link-blog"><%= link_to 'Blog', @website.external_site, :target => "_blank" %></li>
							<% end %>

							<% if @website.be_a_model %>
							<li class="link-be-model"><%= link_to 'Seja um modelo', subdomain_websites_be_model_path(subdomain: request.subdomain) %></li>
							<% end %>

							<% if !customer_signed_in? %>
							<li class="link-register"><%= link_to 'Cadastro', subdomain_new_customer_request_path(subdomain: request.subdomain) %></li>
							<% end %>
							
							<% if customer_signed_in? %>
								<li class="no-border"><%= link_to 'Sair »', destroy_customer_session_path %></li>
							<% else %>
								<li class="no-border">
									<% if !@website.logo_url.blank?  %>
										<%= hidden_field_tag "logo-img", @website.logo_url %>
									<% else %>
										<% if @website.logo.url == "/logos/original/missing.png" %>
											<%= hidden_field_tag "logo-img" %>
										<% else %>
											<%= hidden_field_tag "logo-img", @website.logo.url(:logo) %>
										<% end %>
									<% end %>
									<%= link_to 'Login', customer_session_path, :class => "btn-login sub-popup-link popupw-555 popuph-740" %>
								</li>
							<% end %>
						</ul>
					</div>
				
				</div>
				
				<div id="logo-container" class="auto-size-block">
					<% if !@website.logo_url.blank?  %>
						<%= image_tag @website.logo_url, :class => "base-padding" %>
					<% else %>
						<% if @website.logo.url == "/logos/original/missing.png" %>
							Sua logomarca ficará aqui.
						<% else %>
							<%= image_tag @website.logo.url(:logo), :class => "base-padding" %>
						<% end %>
					<% end %>
				</div>
			
			</div>
			
		</div>
		
		<!-- ********** CONTENT CONTAINER ********** -->
		
		<div id="content-container" class="auto-size-block">
			<div id="content-container-wrapper" class="auto-size-block">
				
				<div id="alert-msgs">
					<% flash.each do |name, msg| %>
					<div class="alert alert-<%= name == :notice ? "success" : "error" %>">
						<a class="close" data-dismiss="alert">×</a>
						<%= msg %>
					</div>
					<% end %>
				</div>

				<input type="hidden" name="current-theme" value="stylish-theme" id="current-theme">
				<input type="hidden" name="slide-show-lines" value="2" id="slide-show-lines">
				<input type="hidden" name="slide-show-cols" value="3" id="slide-show-cols">
				
				<%= yield %>
				
				<div class="content-split"></div>
				
				<div id="news-main-content">
                	<div class="news-content">
                    	<h2><%= link_to 'SOBRE', subdomain_websites_about_path(subdomain: request.subdomain) %></h2>
                        <p><%= @website.agency.agency_about %></p>
                    </div>
                    <div class="news-content">
                    	<h2><%= link_to 'Modelos', subdomain_models_path(subdomain: request.subdomain) %></h2>
                        <p>Venha conhecer um pouco mais sobre os nossos <strong><%= @website.agency.models.count %> modelos</strong>.</p>
                    </div>
                    <div class="news-content last">
                    	<h2><%= link_to 'FALE CONOSCO', subdomain_websites_contact_us_path(subdomain: request.subdomain) %></h2>
                        <p>Monte seu casting e envie para nós. Caso tenha dúvidas ou queira pedir uma sugestão, nos envie uma mensagem. Vamos responder o mais rápido possível.</p>
                    </div>
                </div>
				
			</div>
		</div>
	
		
		<!-- ********** FOOTER ********** -->
		
		<div id="footer" class="auto-size-block vert-shade">
			<div id="footer-wrapper" class="auto-size-block width-70 put-center base-padding">
				<p><%= @website.footer %></p>
				<% if @website.footer_navigation_itens %>
				<div id="footer-nav">
					<ul class="auto-size-block put-list-inline">
						<li><%= link_to 'Home', subdomain_websites_home_path(subdomain: request.subdomain) %></li>
						
						<% if @website.about %>
						<li><%= link_to 'Sobre', subdomain_websites_about_path(subdomain: request.subdomain) %></li>
						<% end %>

						<% if @website.models %>
						<li><%= link_to 'Modelos', subdomain_models_path(subdomain: request.subdomain) %></li>
						<% end %>

						<% if @website.castings %>
							<% if customer_signed_in? %>
								<li><%= link_to 'Casting', subdomain_castings_path(subdomain: request.subdomain) %></li>
							<% else %>
								<li><%= link_to 'Casting', subdomain_websites_casting_foreign_path(subdomain: request.subdomain) %></li>
							<% end %>
						<% end %>

						<% if @website.contact_us %>
						<li><%= link_to 'Contato', subdomain_websites_contact_us_path(subdomain: request.subdomain) %></li>
						<% end %>

						<% if @website.my_site %>
						<li><%= link_to 'Blog', @website.external_site, :target => "_blank" %></li>
						<% end %>

						<% if @website.be_a_model %>
						<li><%= link_to 'Seja um modelo', subdomain_websites_be_model_path(subdomain: request.subdomain) %></li>
						<% end %>

						<% if !customer_signed_in? %>
						<li><%= link_to 'Cadastro', subdomain_new_customer_request_path(subdomain: request.subdomain) %></li>
						<% end %>
						
						<% if customer_signed_in? %>
							<li><%= link_to 'Sair »', destroy_customer_session_path %></li>
						<% else %>
							<li><%= link_to 'Login', customer_session_path, :class => "btn-login" %></li>
						<% end %>
					</ul>
				</div>
				<% end %>
				<div id="powered-by">
					<span>Powered by </span><%= image_tag "theme-cubical/logo-powered.png" %>
				</div>
			</div>

		</div>
		
		<script type="text/javascript">

		  var _gaq = _gaq || [];
		  _gaq.push(['_setAccount', 'UA-42495326-1']);
		  _gaq.push(['_trackPageview']);

		  (function() {
		    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
		    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
		    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		  })();

		</script>
		
	</div>
	
</body>
</html>
