<!DOCTYPE html>
<html>
<head>
  <title>ÜBER - Casting Made Easy - <%= @website.subdomain %> - subdomain_default</title>

  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->

  <%= stylesheet_link_tag    "stripes", media: "all" %>
  <%= javascript_include_tag "subdomain" %>
  <%= csrf_meta_tags %>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
	
	<% if @website.has_custom %>
		<style type="text/css" media="screen">
			body{
				<% if @website.body_background_color %> background-color: <%= @website.body_background_color %> !important; <% end %>
				<% if @website.body_font_family %> font-family: <%= @website.body_font_family %> !important; <% end %>
				<% if @website.body_font_size %> font-size: <%= @website.body_font_size %>% !important; <% end %>
				<% if @website.body_font_color %> color: <%= @website.body_font_color %> !important; <% end %>
			}
			
			h6,h5,h4,h3,h2,h1,a,p,label,span,input{
				<% if @website.body_font_color %> color: <%= @website.body_font_color %> !important; <% end %>
			}
			
			div#header{
				<% if @website.header_background_color %> background-color: <%= @website.header_background_color %> !important; <% end %>
				<% if @website.header_font_family %> font-family: <%= @website.header_font_family %> !important; <% end %>
				<% if @website.header_font_size %> font-size: <%= @website.header_font_size %>% !important; <% end %>
				<% if @website.header_font_color %> color: <%= @website.header_font_color %> !important; <% end %>
			}
			
			div#header h6, div#header h5, 
			div#header h4, div#header h3, 
			div#header h2, div#header h1, 
			div#header a, div#header p, 
			div#header label, div#header span, div#header input{
				<% if @website.header_font_color %> color: <%= @website.header_font_color %> !important; <% end %>
			}
			
			div#nav-container{
				<% if @website.navigation_background_color %> background-color: <%= @website.navigation_background_color %> !important; <% end %>
				<% if @website.navigation_font_family %> font-family: <%= @website.navigation_font_family %> !important; <% end %>
				<% if @website.navigation_font_size %> font-size: <%= @website.navigation_font_size %>% !important; <% end %>
				<% if @website.navigation_font_color %> color: <%= @website.navigation_font_color %> !important; <% end %>
			}
			
			div#nav-container h6, div#nav-container h5, 
			div#nav-container h4, div#nav-container h3, 
			div#nav-container h2, div#nav-container h1, 
			div#nav-container a, div#nav-container p, 
			div#nav-container label, div#nav-container span, div#nav-container input{
				<% if @website.navigation_font_size %> font-size: <%= @website.navigation_font_size %>% !important; <% end %>
				<% if @website.navigation_font_color %> color: <%= @website.navigation_font_color %> !important; <% end %>
			}
			
			div#content-container{
				<% if @website.content_background_color %> background-color: <%= @website.content_background_color %> !important; <% end %>
				<% if @website.content_font_family %> font-family: <%= @website.content_font_family %> !important; <% end %>
				<% if @website.content_font_size %> font-size: <%= @website.content_font_size %>% !important; <% end %>
				<% if @website.content_font_color %> color: <%= @website.content_font_color %> !important; <% end %>
			}
			
			div#content-container h6, div#content-container h5, 
			div#content-container h4, div#content-container h3, 
			div#content-container h2, div#content-container h1, 
			div#content-container a, div#content-container p, 
			div#content-container label, div#content-container span, div#content-container input{
				<% if @website.content_font_color %> color: <%= @website.content_font_color %> !important; <% end %>
			}
			
			div#footer{
				<% if @website.footer_background_color %> background-color: <%= @website.footer_background_color %> !important; <% end %>
				<% if @website.footer_font_family %> font-family: <%= @website.footer_font_family %> !important; <% end %>
				<% if @website.footer_font_size %> font-size: <%= @website.footer_font_size %>% !important; <% end %>
				<% if @website.footer_font_color %> color: <%= @website.footer_font_color %> !important; <% end %>
			}
			
			div#footer h6, div#footer h5, 
			div#footer h4, div#footer h3, 
			div#footer h2, div#footer h1, 
			div#footer a, div#footer p, 
			div#footer label, div#footer span, div#footer input{
				<% if @website.footer_font_size %> font-size: <%= @website.footer_font_size %>% !important; <% end %>
				<% if @website.footer_font_color %> color: <%= @website.footer_font_color %> !important; <% end %>
			}
		</style>
	<% end %>

</head>

<body>

<div id="modals"></div>
  
	<div id="container">
			
		<!-- ********** HEADER ********** -->
		<div id="header" class="auto-size-block">
			<div id="header-wrapper" class="auto-size-block">
				
				<div id="logo-container" class="auto-size-block">
					<% if  @website.logo.url(:logo) == "/logos/logo/missing.png" %>
						<p>Sua logomarca ficará aqui.</p>
					<% else %>
						<%= image_tag @website.logo.url(:logo), :class => "base-padding" %>
					<% end %>
				</div>
				
				<div id="nav-container" class="auto-size-block">
					
					<div id="main-nav" class="auto-size-block">
						<ul class="auto-size-block put-list-inline">
							<li class="link-home">
							<%= link_to 'Home', subdomain_websites_home_path({subdomain: params[:subdomain]}), :class => "active" %>
							</li>

							<% if @website.about %>
							<li class="link-about"><%= link_to 'Sobre', subdomain_websites_about_path({subdomain: params[:subdomain]}) %></li>
							<% end %>

							<% if @website.models %>
							<li class="link-models"><%= link_to 'Modelos', subdomain_models_path(params[:subdomain]) %></li>
							<% end %>

							<% if @website.castings %>
								<% if customer_signed_in? %>
									<li class="link-casting"><%= link_to 'Casting', subdomain_castings_path(params[:subdomain]) %></li>
								<% else %>
									<li class="link-casting"><%= link_to 'Casting', subdomain_websites_casting_foreign_path(params[:subdomain]) %></li>
								<% end %>
							<% end %>

							<% if @website.contact_us %>
							<li class="link-contact"><%= link_to 'Contato', subdomain_websites_contact_us_path({subdomain: params[:subdomain]}) %></li>
							<% end %>

							<% if @website.my_site %>
							<li class="link-blog"><%= link_to 'Blog', @website.external_site, :target => "_blank" %></li>
							<% end %>

							<% if @website.be_a_model %>
							<li class="link-be-model"><%= link_to 'Seja um modelo', subdomain_websites_be_model_path({subdomain: params[:subdomain]}) %></li>
							<% end %>

							<% if !customer_signed_in? %>
							<li>
								<%= link_to 'Cadastro', subdomain_new_customer_request_path(params[:subdomain]) %>
							</li>
							<% end %>
							
							<% if customer_signed_in? %>
								<li class="no-border"><%= link_to 'Sair »', destroy_customer_session_path %></li>
							<% else %>
								<li class="no-border"><%= link_to 'Login', customer_session_path, :class => "btn-login" %></li>
							<% end %>
						</ul>
					</div>
				
				</div>
				
			</div>
			
		</div>
	
		<!-- ********** CONTENT CONTAINER ********** -->
		<div id="content-container">
			<div id="content-container-wrapper">
				
				<div id="alert-msgs">
					<% flash.each do |name, msg| %>
					<div class="alert alert-<%= name == :notice ? "success" : "error" %>">
						<a class="close" data-dismiss="alert">×</a>
						<%= msg %>
					</div>
					<% end %>
				</div>

				<input type="hidden" name="current-theme" value="stripe-theme" id="current-theme">
				<input type="hidden" name="slide-show-photo" value="slide-show-3" id="slide-show-photo">
				
				<%= yield %>
				
			</div>
		</div>
		
		<!-- ********** TEASER ********** -->
        <div id="teaser">
        	<div id="teaser-left" class="teaser-content">
            	<p><%= @website.agency.agency_about %></p>
                <%= link_to 'Saiba Mais »', subdomain_websites_about_path({subdomain: params[:subdomain]}) %>
            </div>
            <div id="teaser-center" class="teaser-content white-font">
				<p>A agência <%= @website.agency.name %> conta com a presença de mais de <strong><%= @website.agency.models.count %> modelos</strong>. Clique no botão abaixo para fazer uma busca completa e encontre o modelo ideal para as suas ações.</p>
                <%= link_to 'Ver Modelos »', subdomain_models_path(params[:subdomain]) %>
            </div>
            <div id="teaser-right" class="teaser-content">
            	<p>Estamos a disposição para montar e oferecer castings que vão de encontro as suas necessidades. Clique no botão abaixo para começar a montar o seu casting. Você deve efetuar o seu login para começar a montar um casting. Caso não tenha um login, você pode fazer um pedido de cadastro para nós. Lhe responderemos em breve.</p>
                <% if @website.castings %>
					<% if customer_signed_in? %>
						<%= link_to 'Montar Casting »', subdomain_castings_path(params[:subdomain]) %>
					<% else %>
						<%= link_to 'Montar Casting »', subdomain_websites_casting_foreign_path(params[:subdomain]) %>
					<% end %>
				<% end %>
            </div>            
        </div>

		<div class="content-split"></div>
		
		<!-- ********** MOSAIC BOTTOM ********** -->
        <div id="mosaic-bottom">
        	<ul>
				<% if @website.agency.models.count <= 16 %>
					<% @website.agency.models.each do |model| %>
	            		<li class='mosaic-container'><%= avatar_tag model.avatar, :search %></li>
					<% end %>
				<% else %>
					<% (1..16).each do |i| %>
					    <li class='mosaic-container'><%= avatar_tag @website.agency.models[i].avatar, :search %></li>
					<% end %>
				<% end %>
            </ul>	
        </div>
		
		<div class="content-split"></div>
		
		<!-- ********** FOOTER ********** -->
		<div id="footer" class="auto-size-block">
			<div id="footer-left" class="auto-size-block">
				<p><%= @website.footer %></p>
				<% if @website.footer_navigation_itens %>
				<div id="footer-nav">
					<ul class="auto-size-block put-list-inline">
						<li>
						<%= link_to 'Home', subdomain_websites_home_path({subdomain: params[:subdomain]}) %>
						</li>

						<% if @website.about %>
						<li><%= link_to 'Sobre', subdomain_websites_about_path({subdomain: params[:subdomain]}) %></li>
						<% end %>

						<% if @website.models %>
						<li><%= link_to 'Modelos', subdomain_models_path(params[:subdomain]) %></li>
						<% end %>

						<% if @website.castings %>
							<% if customer_signed_in? %>
								<li><%= link_to 'Casting', subdomain_castings_path(params[:subdomain]) %></li>
							<% else %>
								<li><%= link_to 'Casting', subdomain_websites_casting_foreign_path(params[:subdomain]) %></li>
							<% end %>
						<% end %>

						<% if @website.contact_us %>
						<li><%= link_to 'Contato', subdomain_websites_contact_us_path({subdomain: params[:subdomain]}) %></li>
						<% end %>

						<% if @website.my_site %>
						<li><%= link_to 'Blog', @website.external_site, :target => "_blank" %></li>
						<% end %>

						<% if @website.be_a_model %>
						<li><%= link_to 'Seja um modelo', subdomain_websites_be_model_path({subdomain: params[:subdomain]}) %></li>
						<% end %>

						<% if !customer_signed_in? %>
						<li>
							<%= link_to 'Cadastro', subdomain_new_customer_request_path(params[:subdomain]) %>
						</li>
						<% end %>
						
						<% if customer_signed_in? %>
							<li><%= link_to 'Sair »', destroy_customer_session_path %></li>
						<% else %>
							<li><%= link_to 'Login', customer_session_path, :class => "btn-login" %></li>
						<% end %>
					</ul>
				</div>
				<% end %>
				<div id="powered-by">
					<span>Powered by </span><%= image_tag "theme-stripes/jpg/logo-small.png" %>
				</div>
			</div>
			
			<div id="footer-right">
				<h4><%= @website.agency.name %></h4>
                <p><%= @website.agency.address %>, nº <%= @website.agency.address_number %>,<br />
                <%= @website.agency.neighborhood %>, <%= @website.agency.city %>, <%= @website.agency.state %><br />
                <%= @website.agency.cep %></p>
			</div>

		</div>
		
	</div>
	
</body>
</html>
