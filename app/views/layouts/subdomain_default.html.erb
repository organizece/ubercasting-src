<!DOCTYPE html>
<html>
<head>
  <title>ÜBER - Casting Made Easy - <%= @website.subdomain %> - subdomain_default</title>

  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->

  <%= stylesheet_link_tag    "subdomain", media: "all" %>
  <%= javascript_include_tag "subdomain" %>
  <%= csrf_meta_tags %>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>

<body>

<div id="modals"></div>
  
	<div id="container">
			
		<div id="header" class="auto-size-block vert-shade">
		
			<div id="header-wrapper" class="auto-size-block">
				
				<div id="nav-container" class="auto-size-block base-padding">
			
					<div id="main-nav" class="auto-size-block put-center ">
						<ul class="auto-size-block put-list-inline">
							<li>
							<%= link_to 'Home', subdomain_websites_home_path({subdomain: params[:subdomain]}), :class => "active" %>
							</li>

							<% if @website.about %>
							<li><%= link_to 'Sobre', subdomain_websites_about_path({subdomain: params[:subdomain]}) %></li>
							<% end %>

							<% if @website.models %>
							<li><%= link_to 'Modelos', subdomain_models_path(params[:subdomain]) %></li>
							<% end %>

							<% if @website.castings %>
								<% if customer_signed_in? %>
									<li><%= link_to 'Casting', subdomain_castings_path(params[:subdomain]) %></li>
								<% else %>
									<li><%= link_to 'Casting', subdomain_websites_casting_foreign_path(params[:subdomain]) %></li>
								<% end %>
							<% end %>

							<% if @website.contact_us %>
							<li><%= link_to 'Contato', subdomain_websites_contact_us_path({subdomain: params[:subdomain]}) %></li>
							<% end %>

							<% if @website.my_site %>
							<li><%= link_to 'Blog', @website.external_site %></li>
							<% end %>

							<% if @website.be_a_model %>
							<li><%= link_to 'Seja um modelo', subdomain_websites_be_model_path({subdomain: params[:subdomain]}) %></li>
							<% end %>
							
							<% if customer_signed_in? %>
								<li class="no-border"><%= link_to 'Sair »', destroy_customer_session_path %></li>
							<% else %>
								<li class="no-border"><%= link_to 'Login', customer_session_path, :class => "btn-login" %></li>
							<% end %>
						</ul>
					</div>

				</div>
				
				<div id="logo-container" class="auto-size-block width-50 put-center">
					<% if  @website.logo.url(:logo) == "/logos/logo/missing.png" %>
						<p>Sua logomarca ficará aqui.</p>
					<% else %>
						<%= image_tag @website.logo.url(:logo), :class => "base-padding" %>
					<% end %>
				</div>
			
			</div>
			
		</div>
	
		<div id="content-container" class="auto-size-block vert-shade base-padding">
		
			<div id="content-container-wrapper" class="auto-size-block width-70 put-center base-padding round-border">
			
				<div id="alert-msgs">
					<% flash.each do |name, msg| %>
					<div class="alert alert-<%= name == :notice ? "success" : "error" %>">
						<a class="close" data-dismiss="alert">×</a>
						<%= msg %>
					</div>
					<% end %>
				</div>
				
				<input type="hidden" name="slide-show-photo" value="slide-show-4" id="slide-show-photo">

				<%= yield %>
			
			</div>
		
		</div>
	
		<div id="footer" class="auto-size-block vert-shade">

			<div id="footer-wrapper" class="auto-size-block width-70 put-center base-padding">
			
				<p><%= @website.footer %></p>

				<% if @website.footer_navigation_itens %>
				<div id="footer-nav">
					<ul class="auto-size-block put-list-inline">
						<li>
						<%= link_to 'Home', subdomain_websites_home_path({subdomain: params[:subdomain]}) %>
						</li>

						<% if @website.about %>
						<li><%= link_to 'Sobre', subdomain_websites_about_path({subdomain: params[:subdomain]}) %></li>
						<% end %>

						<% if @website.models %>
						<li><%= link_to 'Modelos', subdomain_models_path(params[:subdomain]) %></li>
						<% end %>

						<% if @website.castings %>
							<% if customer_signed_in? %>
								<li><%= link_to 'Casting', subdomain_castings_path(params[:subdomain]) %></li>
							<% else %>
								<li><%= link_to 'Casting', subdomain_websites_casting_foreign_path(params[:subdomain]) %></li>
							<% end %>
						<% end %>

						<% if @website.contact_us %>
						<li><%= link_to 'Contato', subdomain_websites_contact_us_path({subdomain: params[:subdomain]}) %></li>
						<% end %>

						<% if @website.my_site %>
						<li><%= link_to 'Meu Site', @website.external_site %></li>
						<% end %>

						<% if @website.be_a_model %>
						<li><%= link_to 'Seja um modelo', subdomain_websites_be_model_path({subdomain: params[:subdomain]}) %></li>
						<% end %>
						
						<% if customer_signed_in? %>
							<li><%= link_to 'Sair »', destroy_customer_session_path %></li>
						<% else %>
							<li><%= link_to 'Login', customer_session_path, :class => "btn-login" %></li>
						<% end %>
					</ul>
				</div>
				<% end %>
			
			</div>

		</div>
	
	</div>
	
</body>
</html>
