<div id="casting-list" class="request-list">
	
	<% for casting in @castings %>
		
		<div class="request-line">
			<ul class="requst-info">
				<li><%= check_box_tag casting.id, casting.id %></li>
				<li><%= casting.name %></li>
			</ul>
			
			<ul class="requst-action">
				<li class="chat-icon">
					<%= link_to 'Mensagens', subdomain_casting_messages_path(casting, subdomain: request.subdomain), title: 'Mensagens', remote: true %>
					<% if casting.agency_new_message %>
						<span id="new_message_<%= casting.id %>" class="chat-flag">Pan!</span>
					<% end %>
				</li>
				<li class="request-icon request-add"><%= link_to 'Adicionar Modelos', subdomain_models_path(subdomain: request.subdomain), title: 'Adicionar Modelos' %></li>
				<li class="request-icon request-view"><%= link_to 'Visualizar', subdomain_casting_path(casting, subdomain: request.subdomain), title: 'Visualizar' %></li>
				<li class="request-icon request-del"><%= link_to 'Excluir', subdomain_casting_path(casting, subdomain: request.subdomain), method: :delete, remote: true, title: 'Excluir' %></li>
			</ul>
		</div>
		
	<% end %>
	
</div>