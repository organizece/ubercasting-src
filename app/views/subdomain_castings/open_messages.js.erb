$("#new_message_<%= @customer_casting.id %>").hide();

$("#modals").empty();
$("#modals").html("<%= escape_javascript(render('subdomain_castings/modals/messages')) %>");
$("#modal-add-model").modal('show');
$("#modal-add-model").on('shown', function () {
	
	$("#modal-add-model li.loader-gif").css("padding-left","17px");
	$("#modal-add-model li.loader-gif").hide();
	
	$("#modal-add-model input#btn-share-msg").click(function(){
		$(this).hide();
		$("#modal-add-model li.loader-gif").show();
	});
	
});