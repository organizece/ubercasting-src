<h1>Galeria</h1>

<table>
  <tr>
    <th>Arquivo</th>
    <th>Foto</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= photo.image_file_name %></td>
    <td><%= image_tag photo.image.url(:thumb) %></td>
    <td><%= link_to 'Exibir', model_photo_path(photo.model, photo) %></td>
    <td><%= link_to 'Deletar', model_photo_path(photo.model, photo), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td>
      <%= form_for @model, :action => :update, :remote => true do |f| %>
        <div class="field">
          <%= f.hidden_field :avatar_photo_id, value: photo.id %><br />
          <%= f.submit 'Avatar!' %>
        </div>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

