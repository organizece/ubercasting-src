<%= javascript_include_tag "modelblock" %>

<div id="casting-models-result" class="auto-size-block">
	
	<% for casting_model in @casting_models %>
	
		<div class="model-box">
			<% model = casting_model.model %>
			
			<div class="model-box-img">
				
				<div class="model-box-checkbox">
					<%= check_box_tag casting_model.id, casting_model.id %>
				</div>
				
				<%= avatar_tag model.avatar, :search %>
			
			</div>
			
			<div class="model-box-links">
				
				<ul>
					<% if model.composite %>
					<li class="model-box-view-composite"><%= link_to 'Visualizar Composite', subdomain_model_composite_path(model, subdomain: request.subdomain), remote: true %></li>
					<% end %>
					<li><h4><%= link_to model.art_name, subdomain_model_path(model, subdomain: request.subdomain) %></h4></li>
					<li>
						<div id='model-casting-score-<%= casting_model.id %>'>
							<%= render 'score_buttons', casting_model: casting_model %>
						</div>
					</li>
					<li class="model-box-add-composite"><%= link_to 'Remover do Casting', subdomain_model_casting_path(casting_model, subdomain: request.subdomain), method: :delete, remote: true %></li>
					
				</ul>
				
			</div>
			
		</div>
		
	<% end %>
	
</div>